{{>header}}
<div class="container">
  <form name="registration" class="registartion-form" action="/save" method="post">
    <table>
      <tr>
        <td><label for="username">UserName:</label></td>
        <td><input type="text" name="username" id="username" placeholder="your name"></td>
      </tr>
      <tr>
        <td><label for="email">Email:</label></td>
        <td><input type="text" name="email" id="email" placeholder="your email"></td>
      </tr>
      <tr>
        <td><label for="phoneNumber">Phone Number</label></td>
        <td><input type="number" name="phonenumber" id="phoneNumber"></td>
      </tr>
      <tr>
        <td><label for="meetingtime">Meeting Time</label></td>
        <td><input type="datetime-local" name="meetingtime" id="meetingtime"></td>
      </tr>
      <tr>
        <td><label for="message">Message</label></td>
        <td><textarea name="message" id="message" placeholder="Write about yourself..."></textarea></td>
      </tr>
      <tr>
        <td colspan="2"><input type="submit" class="submit" value="Register" /></td>
      </tr>
    </table>
  </form>
</div>
{{>footer}}